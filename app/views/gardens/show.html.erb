<%= stylesheet_link_tag "gardens" %>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

<div class="col-lg-12 container-garden">

	<div class="col-lg-7 gardenshow-1">


		<div class="div-status">
		<h1><%= @garden.name %></h1>
			<% if @status.nil? %>

				<div class="status-user">

					<div id="cerclejaune"></div>
					<p class="para-strong"><%= "Pas de status pour ce jardinier." %></p>
			
				</div>

				<% else %>
				
				<div class="status-user">
		
					<div id="cercle"></div>
					<p class="para-strong status-content"><%= @status.content %></p> 
				
				</div>
				
				<div class="howmanydays">
					<% if @how_many_days == 0 %>
					
					<p class="para-small">Aujourd'hui</p>
					<% else %>

					<p class="para-small">Il y a <%= @how_many_days %> jours</p>
					<% end %>
					<% end %>
				</div>
		</div> <!-- fin de div div-status -->
	
		<div><%= image_tag("tomato.jpg", :alt => "", class:'img-fluid slider-photos') %></div>

		<div class="products-garden">
			<h2>Les Produits</h2>

			<div class="legumes-garden">
				<p class="para-strong"><i class="fas fa-carrot"></i> Les l√©gumes</p>
				<div class="legumes-list"><% @harvest.each do |h| %>
					<p><%= Product.find(h.product_id).name %></p>
					<% end %>
				</div>
			</div>

			<div class="fruits-garden">
				<p class="para-strong"><i class="fas fa-apple-alt"></i> Les fruits</p>
				<div class="legumes-list"><% @harvest.each do |h| %>
					<p><%= Product.find(h.product_id).name %></p>
					<% end %>
				</div>
			</div>

		</div> <!-- fin de div produits-garden -->

		<div class="map-garden">
			<h2>Sur la carte</h2>
			<div class="mapouter"><div class="gmap_canvas"><iframe width="600" height="395" id="gmap_canvas" src="https://maps.google.com/maps?q=paris&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.jetzt-drucken-lassen.de"></a></div><style>.mapouter{text-align:right;height:395px;width:600px;}.gmap_canvas {overflow:hidden;background:none!important;height:395px;width:600px;}</style></div>
			
		</div> <!-- fin de div map-garden -->

		<button class="btn-yeah">Ajouter aux favoris</button>


	</div> <!-- fin de div gardenshow-1 -->


	<div class="col-lg-5 gardenshow-2">
	</div> <!-- fin de div gardenshow-2 -->


</div>