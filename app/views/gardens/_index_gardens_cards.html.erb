<div class="card-garden-title d-flex align-content-between justify-content-center flex-wrap">
	<h1>Tous les potagers</h1>
</div>

<div class="d-flex align-content-between justify-content-center flex-wrap">
    <% @gardens.each do |garden| %>
        <div class="card space-gardens">
            <div class="card-image">
                <%if garden.images.attached?%>
                    <%= image_tag(garden.images.first, class:'card-img-top') %>
                <% else %>
                    <%= image_tag 'slide-2.jpg', class:'card-img-top' %>
                <% end %>
            </div>
            <div class="d-flex justify-content-center flex-column">
                <h2 class='align-self-center'><%=link_to garden.name, garden_path(garden.id) %></h2>
                <p class='align-self-center'><%= garden.city %></p>
                <p class='align-self-center'>
                    <% if Status.find_by(user_id: garden.user_id).nil? %>
                    <% else %>
                    <p class="status-cards-index"><span class='para-strong'>Statut</span> : "<%= Status.find_by(user_id: garden.user_id).content %>"</p>
                    <% end %>
                </p>
                <%= link_to "Voir le jardin", garden_path(garden), class:"btn btn-light" %>
            </div>
        </div>
    <% end %>
</div>
<div class="d-flex align-content-between justify-content-center flex-wrap">
    <%= paginate(@gardens) %>
</div>
