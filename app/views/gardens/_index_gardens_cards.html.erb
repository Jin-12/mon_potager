<div class="d-flex align-content-between justify-content-center flex-wrap">
    <h1 style="margin-bottom:40px">
        Tous les potagers
    </h1>
</div>

<div class="d-flex align-content-between justify-content-center flex-wrap">
    <% @gardens.each do |garden| %>
        <div class="card space-gardens" style="width: 22rem; margin: 1%;">
            <div class="card-image">
                <%if garden.images.attached?%>
                    <%= image_tag(garden.images.first, style:'width:100%;', class:'card-img-top') %>
                <% else %>
                    <%= image_tag 'slide-2.jpg', style:'width:100%;', class:'card-img-top' %>
                <% end %>
            </div>
            <div class="d-flex justify-content-center flex-column">
                <h2 class='align-self-center' ,="," style="margin: 1% 0 -20px 0;"><%=link_to garden.name, garden_path(garden.id) %></h2>
                <p class='align-self-center' style="margin:0"><%= garden.city %></p>
                <p class='align-self-center'>
                    <% if Status.find_by(user_id: garden.user_id).nil? %>
                    <% else %>
                    <p class="status-cards-index"><span class='para-strong'>Statut</span> : "<%= Status.find_by(user_id: garden.user_id).content %>"</p>
                    <% end %>
                </p>
                <%= link_to "Voir le jardin", garden_path(garden), class:"btn btn-light" %>
            </div>
        </div>
    <% end %>
</div>
<div class="d-flex align-content-between justify-content-center flex-wrap">
    <%= paginate(@gardens) %>
</div>
