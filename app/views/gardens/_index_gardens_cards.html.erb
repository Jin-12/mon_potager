<div class="d-flex align-content-between justify-content-center flex-wrap">
	<% @gardens.each do |garden| %>
		<div class="card space-gardens" style="width: 22rem; margin: 1%;">
		    <div class="card-image">
          <%if garden.images.attached?%>
            <% garden.images.each do |image| %>
              <%= image_tag(image, style:'width:100%;', class:'card-img-top') %>
            <% end %>
            <% else %>
            <%= image_tag 'slide-2.jpg', style:'width:100%;', class:'card-img-top' %>
            <% end %>
		    </div>
		    <div class="d-flex justify-content-center flex-column">
          <p class='para-strong align-self-center', style="margin: 1% 0 1% 0;"><%= garden.name %></p>
          <p class='align-self-center'><%= garden.city %></p>
          <%= link_to "Voir le jardin", garden_path(garden), class:"btn btn-light" %>
		    </div>
		</div>
	<% end %>
</div>
