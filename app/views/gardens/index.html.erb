<div class="container">

  <div class="row" style='width:100%'>


    <div class="col">
      <div class="card p-2 search">
        <%= simple_form_for :search,
          url: root_path,
          method: "GET",
          html: { class: 'form-inline' },
          remote: true do |f| %>

        <%= f.input :location, input_html: {value: "", placeholder: "filtrer par endroit"} %>
        <%= f.submit "Search", class: "btn btn-primary" %>

        <% end %>
      </div>
      <div>
        <ul class="list-group">
          <% @gardens.each do |garden| %>
          <li class="list-group-item">
            <%= link_to garden.name , garden_path(garden.id) %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col">
      <%= render 'map_for_index' %>
    </div>
  </div>