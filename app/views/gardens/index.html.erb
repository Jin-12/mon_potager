<div class="container">
  <div class="row" style='width:100%'>

    <div class="col">
      <ul class="list-group">
      <% if @search.empty? %> 
        <% @gardens.each do |garden| %>
        <li class="list-item">
        <%= link_to garden.name , garden_path(garden.id) %>
        </li>
        <% end %>
      <% else %> 
        <% @search.each do |garden| %>
        <li class="list-item">
        <%= link_to garden.name , garden_path(garden.id) %>
        </li>
        <% end %>
      <% end %>
      </ul>
    </div>
    <div class="col">
      <%= render 'map_for_index' %>
    </div>
  </div>
</div>