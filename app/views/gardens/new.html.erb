<div class="container col-md-8 order-md-1">
  <div class="form-group"><br><br>
    <h3>
      Créé ton potager !
    </h3>
    <br/>
    <%=form_tag url_for(action: 'create'), method: "post" do %>
    <%= label_tag 'Nom de ton potager' %>
    <%= text_field_tag 'gardenname', 'Nom du potager', class:'form-control' %>
    <br/>

    <%= label_tag 'Adresse de ton potager' %>
    <%= text_field_tag 'adress', 'Adresse de ton potager', class:'form-control' %>
    <br/>

    <%= label_tag 'Tes Récoltes' %>
    <%= text_field_tag 'productname1', "   ", class:'form-control' %>
    <br/>

    <%= text_field_tag 'productname2', "   ", class:'form-control' %>
    <br/>

    <%= text_field_tag 'productname3', "   ", class:'form-control' %>
    <br/>

    <%= text_field_tag 'productname4', "   ", class:'form-control' %>
    <br/>

    <%= text_field_tag 'productname5', "   ", class:'form-control' %>
    <br/>

    <%= submit_tag "Créer mon potager", class:"btn btn-light" %>
  <% end %>

</div>
</div>
