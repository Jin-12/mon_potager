<div class="container">
    <div class="container-form">
      <div class="container-card row justify-content-md-center align-items-center">
        <div class="col col-md-8 col-sm6 col-lg-8 col-xl-8">
          <div class="card border shadow-lg p-4">
          <h2>Changer de mot de passe</h2>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>
            <div class="form-inputs">
              <%= f.input :password,
                          label: "New password",
                          placeholder: "Nouveau mot de passe",
                          required: true,
                          autofocus: true,
                          hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Change my password" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
            </div>
          </div>
        </div>
      </div>
  