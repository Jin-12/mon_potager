<div class="container">
 <div class="container-card row justify-content-md-center align-items-center">
    <div class="col col-md-8 col-sm5 col-lg-7 col-xl-7">
      <div class="card border shadow-lg p-4">
        <h2>Mettre à jour le
          <%= resource_name.to_s.humanize %>
        </h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>En attente de confirmation de de:
            <%= resource.unconfirmed_email %>
          </p>
          <% end %>

          <%= f.input :password, placeholder:"Nouveau mot de passe",
                hint: "Laisser vide si pas de changement ",
                required: false,
                input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, placeholder:"Confirmation du nouveau mot de passe",
                required: false,
                input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password, placeholder:"Mot de passe actuel",
                hint: "Mot de passe actuel afin de confirmer les changements",
                required: true,
                input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update", class:"btn submit-btn" %>
        </div>
        <% end %>
        <div class="infos-reset-password">
          <h3>Supprimer mon compte</h3>

          <p>Vous n'êtes pas satisfait ?</p>
            <div class="link-reset-password"><%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous certain ?" }, method: :delete %> </div>
           <div><%= link_to "Retour", :back %></div>
        </div>
        
      </div>
    </div>
  </div>
  </div>
  

