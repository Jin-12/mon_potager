<div class="container">
    <div class="container-form">
      <div class="container-card row justify-content-md-center align-items-center">
        <div class="col col-md-8 col-sm6 col-lg-8 col-xl-8">
          <div class="card border shadow-lg p-4">
            <h2>Rejoins la communauté <i class="em em-carrot"></i></h2>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
              <div class="form-inputs">
                <%= f.input :email,  placeholder: 'Email*',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>

                <%= f.input :password, placeholder: 'Mot de passe*',
                      required: true,
                      hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
                <%= f.input :password_confirmation, placeholder: 'Confirmation du mot de passe*',
                      required: true,
                      input_html: { autocomplete: "new-password" } %>

                      <%= f.input :first_name,  placeholder: 'Prénom*',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "first_name" }%>
        
                      <%= f.input :last_name,  placeholder: 'Nom*',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "last_name" }%>
        
                      <%= f.input :birthdate,  as: :date, placeholder: 'Date de naissance',
                      required: false,
                      autofocus: true,
                      hint: ("Date de naissance"),
                      start_year: Date.today.year - 99,
                      end_year: Date.today.year - 15,
                      include_blank: true,
                      default: Date.today,
                      input_html: { autocomplete: "birthdate" } %>

                      <br>
                      <%= f.input :description,  placeholder: 'Description : Raconte nous ta passion du potager et / ou des légumes !',
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "description" }%>

              </div>
              <div class="form-actions">
                <%= f.button :submit, "C'est parti !", class:"submit-btn col-12 col-md-4 col-lg-4" %>
              </div>
            <% end %>
            <div class="form-connexion">
            <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
  </div>
  <!-- div modal -->
  
</div>
