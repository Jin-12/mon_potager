<div class="container">
  <div class="container-card row justify-content-md-center align-items-center">
    <div class="col col-md-8 col-sm5 col-lg-7 col-xl-7">
      <div class="card border shadow-lg p-4">
        <h2>Renvoyer les informations de d√©blocage de compte</h2>

        <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <%= f.full_error :unlock_token %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Resend unlock instructions" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</div>
