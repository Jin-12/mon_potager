<div class="container">
<div class="container-form">
  <div class="container-card row justify-content-md-center align-items-center">
    <<div class="container-card row justify-content-md-center align-items-center">>
      <div class="col col-md-8 col-sm5 col-lg-7 col-xl-7">
        <div class="card border shadow-lg p-4">
            <h2>Se connecter</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, placeholder: 'Email*',
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password, placeholder: 'Mot de passe*',
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
            
              <div class="form-actions">
                <%= f.button :submit, "Se connecter" , class:"submit-btn"%>
              </div>
            <% end %>
            <div class="form-connexion">
            <%= render "devise/shared/links" %>
            </div>
            
        </div>

    </div>
  </div>
</div>
</div>

